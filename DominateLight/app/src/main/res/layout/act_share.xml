<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jeff.dominatelight.view.TitleBar
        android:id="@+id/act_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/act_fgt_bg"
        android:padding="15dp">

        <TextView
            android:id="@+id/act_share_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/text_blue"
            android:background="@drawable/white_left_radius"
            android:text="@string/share_my" />

        <TextView
            android:id="@+id/act_share_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/white_right_rect_hollow"
            android:textColor="@color/white"
            android:text="@string/share_other" />
    </LinearLayout>

    <com.jeff.dominatelight.view.IndexViewPager
        android:id="@+id/act_share_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>