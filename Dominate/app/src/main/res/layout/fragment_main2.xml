<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="main.MainFragmentDB" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <!--最顶使用的 RecyclerView  横向滚动，并可以拖拽的-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/mainFragmentDSRVTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="5dp" />

            <!-- //组 数据列表-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/mainFragmentDSRVGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="5dp" />


            <!--//单个数据列表-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/mainFragmentSSRVSingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="5dp" />

        </LinearLayout>
    </ScrollView>
</layout>