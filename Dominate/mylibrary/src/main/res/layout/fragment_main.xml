<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="jeff.main.MainFragmentDB" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingRight="@dimen/layout_margin">

                <TextView
                    android:id="@+id/top_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="Grape Home" />
            </RelativeLayout>
            <!--最顶使用的 RecyclerView  横向滚动，并可以拖拽的-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/main_fragment_top_DSRV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_huge"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:padding="5dp" />
            <!--分组 ，点击按钮选择添加-->
            <TextView
                android:id="@+id/main_fragment_device_group_TV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/center_height"
                android:drawableRight="@mipmap/arrow_r"
                android:gravity="center|left"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/text_padding"
                android:text="@string/group"
                android:textSize="@dimen/text_size" />
            <!-- //组 数据列表-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/main_fragment_group_DSRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never" />

            <!--未分组设备-->
            <TextView
                android:id="@+id/main_fragment_device_ungrouped_TV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/center_height"
                android:drawableRight="@mipmap/arrow_r"
                android:gravity="center|left"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/text_padding"
                android:text="@string/ungrouped"
                android:textSize="@dimen/text_size" />
            <!--//单个数据列表-->
            <kotlin_adapter.adapter_exension.dragSwipeDismiss.DragAndSwipeRecyclerView
                android:id="@+id/main_fragment_single_DSRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never" />

        </LinearLayout>
    </ScrollView>
</layout>