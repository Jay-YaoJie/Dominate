<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- have v21-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="noTitleDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/white_radius_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WaitingDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/white_radius_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Base.Button" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Blue.Button" parent="Base.Button">
        <item name="android:background">@drawable/blue_rect_bg</item>
    </style>

    <style name="White.Rect.Hollow.Button" parent="Base.Button">
        <item name="android:background">@drawable/white_rect_hollow</item>
    </style>

    <style name="Black.Rect.Hollow.Button" parent="Base.Button">
        <item name="android:background">@drawable/black_rect_hollow</item>
        <item name="android:textColor">@color/text_color_454545</item>
    </style>

    <style name="EditText.Transparent" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/text_color_5f5f5f</item>
        <item name="android:textSize">@dimen/edittext_size</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="EditText.ChangePassword" parent="android:Widget.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/text_color_5f5f5f</item>
        <item name="android:textSize">@dimen/edittext_size</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="anim_view">
        <item name="@android:windowEnterAnimation">@anim/anim_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_out</item>
    </style>

</resources>
