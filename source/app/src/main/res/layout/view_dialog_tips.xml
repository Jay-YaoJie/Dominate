<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/view_dialog_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/view_dialog_tips_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_dialog_tips_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/view_dialog_tips_center_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black_424242"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_dialog_tips_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_dialog_tips_button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="13dp"
            android:textColor="@color/act_fgt_bg"
            android:textSize="17sp"
            android:visibility="gone" />


        <Button
            android:id="@+id/view_dialog_tips_button_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_line"
            android:visibility="gone" />

        <Button
            android:id="@+id/view_dialog_tips_button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:padding="13dp"
            android:text="确定"
            android:textColor="@color/act_fgt_bg"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>